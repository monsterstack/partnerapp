<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include layout="@layout/toolbar_layout_close_btn"/>

    <ImageButton
        android:layout_marginTop="20dp"
        android:layout_gravity="center_horizontal"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:background="@color/white"
        android:src="@drawable/ic_backup_black_24dp"
        android:layout_alignParentRight="true"
        android:scaleType="fitCenter" />

    <TextView
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:text="Record the following 12 word Recovery Phrase. Use it to recover your funds just in case you lose your PIN!  Be sure to store these words offline somewhere safe and secure."
        android:layout_width="250dp"
        android:layout_gravity="center_horizontal"
        android:textAlignment="center"
        android:textSize="15sp"
        android:layout_height="wrap_content" />



    <RelativeLayout
        android:gravity="center|bottom"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical">
        <Button
            android:id="@+id/backupButton"
            android:layout_gravity="bottom"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:background="@color/colorPrimary"
            android:text="Backup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"/>

    </RelativeLayout>
</LinearLayout>