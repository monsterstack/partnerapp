<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/emptyState_get_started"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="180dp"
    android:visibility="gone"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/frown_image"
            android:src="@drawable/ic_sentiment_dissatisfied_black_24dp"
            android:layout_centerHorizontal="true"
            android:layout_width="80dp"
            android:layout_height="80dp" />

        <TextView
            android:id="@+id/emptyState_get_started_title"
            android:layout_marginTop="25dp"
            android:text="Empty in groups"
            android:textAlignment="center"
            android:textSize="23sp"
            android:textStyle="bold"
            android:layout_below="@id/frown_image"
            android:layout_gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/emptyState_get_started_subtext"
            android:layout_marginTop="10dp"
            android:textSize="15sp"
            android:textAlignment="center"
            android:text="Create a group and it will show up here."
            android:layout_below="@id/emptyState_get_started_title"
            android:layout_gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </RelativeLayout>

    <Button
        android:id="@+id/create_group_button"
        android:layout_marginTop="20dp"
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:layout_gravity="center|center_horizontal"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        android:text="Create"/>
</LinearLayout>
