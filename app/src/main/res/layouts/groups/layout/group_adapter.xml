<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:avatarview="http://schemas.android.com/apk/monsterstack.io.avatarview"
    android:id="@+id/cardView"
    app:cardUseCompatPadding="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="top"
            android:orientation="vertical"
            android:padding="12dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="130dp">
                <LinearLayout
                    android:id="@+id/header"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/members_label"
                        android:textColor="@color/colorPrimaryText"
                        android:text="Members"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <Button
                        android:id="@+id/show_all_label"
                        android:text="Show All"
                        android:drawableRight="@drawable/ic_play_arrow_black_24dp"
                        android:textSize="10sp"
                        android:textAlignment="viewEnd"
                        android:background="@color/white"
                        android:padding="0dp"
                        android:textColor="@color/colorSecondaryText"
                        style="@style/Widget.AppCompat.Button.Borderless"
                        android:layout_width="match_parent"
                        android:layout_height="20dp" />

                </LinearLayout>



                <monsterstack.io.horizontallistview.HorizontalListView
                    android:id="@+id/membersView"
                    android:layout_centerInParent="true"
                    android:layout_marginTop="5dp"
                    android:layout_below="@id/header"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/capacity"
                    android:layout_below="@id/membersView"
                    android:text="4 of 5 filled"
                    android:textStyle="bold"
                    android:textSize="10sp"
                    android:layout_marginEnd="5dp"
                    android:textColor="@color/colorSecondaryText"
                    android:layout_alignParentEnd="true"
                    android:textAlignment="viewEnd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </RelativeLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:numColumns="auto_fit"
                android:columnWidth="90dp"
                android:horizontalSpacing="10dp"
                android:verticalSpacing="10dp"
                android:layout_marginTop="5dp"
                android:showDividers="middle"
                android:divider="@drawable/separator_vertical"
                android:stretchMode="columnWidth"
                android:layout_height="100dp">

                <TextView
                    android:id="@+id/ondeck_label"
                    android:textColor="@color/colorPrimaryText"
                    android:text="On Deck"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <monsterstack.io.avatarview.AvatarView
                        android:id="@+id/onDeckAvatar"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        avatarview:avatar_shape="avatarShape"
                        avatarview:name_size="20sp"/>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <TextView
                            android:id="@+id/onDeckName"
                            android:layout_marginStart="15dp"
                            android:textColor="@color/colorPrimaryText"
                            android:layout_gravity="center_horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:layout_marginStart="15dp"
                            android:layout_below="@id/onDeckName"
                            android:text="Next Draw: 12/21/2018"
                            android:textColor="@color/colorSecondaryText"
                            android:textSize="12sp"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" />
                    </RelativeLayout>

                </LinearLayout>
            </LinearLayout>

            <RelativeLayout
                android:background="@color/colorAccent"
                android:layout_width="match_parent"
                android:layout_height="70dp">

                <TextView
                    android:id="@+id/balanceLabel"
                    android:text="Balance"
                    android:textColor="@color/white"
                    android:background="@color/colorPrimaryDark"
                    android:textStyle="bold"
                    android:textSize="15sp"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/raisedToDateValue"
                    android:layout_marginTop="5dp"
                    android:text="$433.33"
                    android:textColor="@color/white"
                    android:layout_below="@id/balanceLabel"
                    android:textSize="30sp"
                    android:textAlignment="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </RelativeLayout>

            <LinearLayout
                android:orientation="vertical"
                android:numColumns="auto_fit"
                android:columnWidth="90dp"
                android:horizontalSpacing="10dp"
                android:verticalSpacing="10dp"
                android:layout_marginTop="10dp"
                android:showDividers="middle"
                android:divider="@drawable/separator_vertical"
                android:stretchMode="columnWidth"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:text="Group Goal"
                        android:layout_marginStart="5dp"
                        android:textColor="@color/colorPrimaryText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/groupGoal"
                        android:text="$5500.00"
                        android:textSize="12sp"
                        android:textAlignment="viewEnd"
                        android:layout_gravity="end"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                </LinearLayout>

                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:text="Base Contribution"
                        android:layout_marginStart="5dp"
                        android:textColor="@color/colorPrimaryText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/groupBaseContribution"
                        android:text="$20.00 / w"
                        android:textSize="12dp"
                        android:textColor="@color/colorSecondaryText"
                        android:textAlignment="viewEnd"
                        android:layout_gravity="end"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                </LinearLayout>

                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:text="Estimated Draw"
                        android:layout_marginStart="5dp"
                        android:textColor="@color/colorPrimaryText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/groupEstimatedDraw"
                        android:text="$500.00 / m"
                        android:textSize="12dp"
                        android:textColor="@color/colorSecondaryText"
                        android:textAlignment="viewEnd"
                        android:layout_gravity="end"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

    </FrameLayout>

</android.support.v7.widget.CardView>