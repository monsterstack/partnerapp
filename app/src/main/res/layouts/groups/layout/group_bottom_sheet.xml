<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="350dp"
    android:orientation="vertical"
    android:layout_margin="0dp"
    android:padding="0dp"
    android:background="@color/white"
    app:behavior_hideable="true"
    app:behavior_peekHeight="80dp"
    app:layout_behavior="android.support.design.widget.BottomSheetBehavior"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/group_bottom_sheet_action_title"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorPrimaryDark"
        android:gravity="center"
        android:text="Title Goes Here"
        android:textSize="20dp"
        android:visibility="visible"
        android:textColor="@android:color/white" />

    <RelativeLayout
        android:id="@+id/group_details_action"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:clickable="true"
        android:focusable="true"
        android:background="?attr/selectableItemBackground">
        <ImageButton
            android:id="@+id/group_details_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:background="?android:attr/selectableItemBackground"
            android:textSize="15dp"
            android:paddingLeft="10dp"
            android:layout_marginRight="20dp"
            android:paddingTop="10dp"
            android:src="@drawable/ic_group_white_24dp"
            android:textColor="@android:color/black" />
        <TextView
            android:id="@+id/group_details_action_label"
            android:paddingTop="10dp"

            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/group_details_button"
            android:layout_gravity="center_horizontal|center_vertical"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:text="Details"/>
        <ImageView
            android:src="@drawable/ic_receipt_black_24dp"
            android:paddingTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_alignParentRight="true"
            android:layout_toRightOf="@id/group_details_action_label"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/group_members_action"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:clickable="true"
        android:focusable="true"
        android:background="?attr/selectableItemBackground">
        <ImageButton
            android:id="@+id/group_members_button"
            android:paddingTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:background="?android:attr/selectableItemBackground"
            android:textSize="15dp"
            android:paddingLeft="10dp"
            android:layout_marginRight="20dp"
            android:src="@drawable/ic_group_white_24dp"
            android:textColor="@android:color/black" />
        <TextView
            android:id="@+id/group_members_action_label"
            android:paddingTop="10dp"
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/group_members_button"
            android:layout_gravity="center_horizontal|center_vertical"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:text="Members"/>
        <ImageView
            android:src="@drawable/ic_receipt_black_24dp"
            android:paddingTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_alignParentRight="true"
            android:layout_toRightOf="@id/group_members_action_label"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/group_transactions_action"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:clickable="true"
        android:focusable="true"
        android:background="?attr/selectableItemBackground">
        <ImageButton
            android:id="@+id/group_transactions_button"
            android:paddingTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:background="?android:attr/selectableItemBackground"
            android:textSize="15dp"
            android:paddingLeft="10dp"
            android:layout_marginRight="20dp"
            android:src="@drawable/ic_compare_arrows_white_24dp"
            android:textColor="@android:color/white" />
        <TextView
            android:id="@+id/group_transactions_action_label"
            android:paddingTop="10dp"
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/group_transactions_button"
            android:layout_gravity="center_horizontal|center_vertical"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:text="Transactions"/>
        <ImageView
            android:src="@drawable/ic_receipt_black_24dp"
            android:paddingTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_alignParentRight="true"
            android:layout_toRightOf="@id/group_transactions_action_label"/>
    </RelativeLayout>
</LinearLayout>

