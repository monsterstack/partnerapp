<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/group_details">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:background="@color/colorPrimary"
        android:layout_height="180dp">
        <TextView
            android:id="@+id/group_details_name"
            android:text="Family"
            android:textSize="30sp"
            android:padding="10dp"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/group_details_nextDrawDate"
            android:text="Next 12/22/2018"
            android:textColor="@color/white"
            android:textStyle="bold|italic"
            android:padding="10dp"
            android:layout_toRightOf="@id/group_details_name"
            android:textAlignment="viewEnd"
            android:layout_alignParentEnd="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/group_details_groupBalance"
            android:text="$500.00"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:textStyle="bold|italic"
            android:padding="15dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
</LinearLayout>