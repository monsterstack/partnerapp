<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include layout="@layout/toolbar_layout"/>

    <include layout="@layout/progress_bar"/>

    <LinearLayout
        android:layout_marginTop="50dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <android.support.design.widget.TextInputLayout
                android:id="@+id/input_layout_group_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <EditText
                    android:id="@+id/group_name"
                    android:hint="Group Name"
                    android:background="@drawable/rounded_edit_text"
                    android:layout_marginLeft="10sp"
                    android:layout_marginRight="10sp"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/edit_text_height" />
            </android.support.design.widget.TextInputLayout>

            <TextView
                android:id="@+id/number_of_slots_label"
                android:textSize="15dp"
                android:text="Number of Slots"
                android:layout_below="@id/input_layout_group_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <Spinner
                android:id="@+id/number_of_slots_spinner"
                android:layout_below="@id/number_of_slots_label"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

            </Spinner>
        </RelativeLayout>



    </LinearLayout>
</RelativeLayout>