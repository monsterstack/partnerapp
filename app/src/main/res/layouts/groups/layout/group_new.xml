<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <include layout="@layout/toolbar_layout"/>

    <include layout="@layout/progress_bar"/>

    <LinearLayout
        android:layout_marginTop="50dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:orientation="vertical"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <android.support.design.widget.TextInputLayout
                android:id="@+id/input_layout_group_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <EditText
                    android:id="@+id/group_name"
                    android:hint="Group Name"
                    android:background="@drawable/rounded_edit_text"
                    android:layout_marginLeft="10sp"
                    android:layout_marginRight="10sp"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/edit_text_height" />
            </android.support.design.widget.TextInputLayout>

            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:text="Goal Amount To Raise"
                    android:textSize="15sp"
                    android:textColor="@color/colorPrimaryText"
                    android:layout_margin="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/group_goal_display"
                    android:text="$150.00"
                    android:textColor="@color/colorSecondaryText"
                    android:layout_marginStart="120dp"
                    android:layout_gravity="center|end"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>


            <SeekBar
                android:id="@+id/seekBar_goal"
                android:max="1000"
                android:min="150"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>


            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/numberOfSlotsLabel"
                    android:layout_marginTop="20dp"
                    android:layout_marginStart="20dp"
                    android:text="Number of Members"
                    android:textColor="@color/colorPrimaryText"
                    android:textSize="15sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/group_numberOfSlots_display"
                    android:text="4"
                    android:layout_marginTop="20dp"
                    android:layout_marginStart="120dp"
                    android:layout_marginBottom="10dp"
                    android:textColor="@color/colorSecondaryText"
                    android:textAlignment="center"
                    android:layout_gravity="center|end"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>


            <SeekBar
                android:id="@+id/seekBar_numberOfSlots"
                android:max="12"
                android:min="4"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>


            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:text="Duration"
                    android:textColor="@color/colorPrimaryText"
                    android:textSize="15sp"
                    android:layout_margin="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/group_calculated_duration"
                    android:text="4 months"
                    android:textColor="@color/colorSecondaryText"
                    android:layout_margin="20dp"
                    android:layout_gravity="center|end"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:text="Contribution Frequency"
                    android:layout_marginTop="8dp"
                    android:textColor="@color/colorPrimaryText"
                    android:textSize="15sp"
                    android:layout_marginStart="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/group_contribution_freq_display"
                        android:layout_width="wrap_content"
                        android:layout_marginStart="80dp"
                        android:textColor="@color/colorSecondaryText"
                        android:text="Monthly"
                        android:layout_height="wrap_content" />

                    <android.support.v7.widget.SwitchCompat
                        android:id="@+id/group_contribution_freq_input"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="false"
                        android:paddingBottom="10dp"
                        android:paddingLeft="20dp"
                        android:paddingRight="20dp"
                        android:paddingTop="10dp"
                        android:textAlignment="viewStart"/>

                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

        <!-- Base Contribution Banner -->
        <RelativeLayout
            android:layout_marginTop="30dp"
            android:background="@color/colorAccent"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/baseContributionLabel"
                android:text="Base Contribution"
                android:textColor="@color/white"
                android:background="@color/colorPrimaryDark"
                android:textStyle="bold"
                android:textSize="15sp"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <RelativeLayout
                android:layout_below="@id/baseContributionLabel"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/group_calculated_baseContribution"
                    android:layout_centerInParent="true"
                    android:text="$25.00 / m"
                    android:textColor="@color/white"
                    android:textSize="50sp"
                    android:textAlignment="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </RelativeLayout>

        </RelativeLayout>

    </LinearLayout>
</RelativeLayout>