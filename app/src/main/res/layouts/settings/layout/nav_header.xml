<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    xmlns:avatarview="http://schemas.android.com/apk/monsterstack.io.avatarview"
    android:background="?selectableItemBackground"
    android:padding="16dp"
    android:orientation="vertical"
    android:paddingBottom="0dp">

    <RelativeLayout
        android:id="@+id/nav_header"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="0dp"
        android:paddingBottom="0dp"
        android:layout_gravity="bottom"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <monsterstack.io.avatarview.AvatarView
            android:id="@+id/userImage"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginTop="10dp"
            android:layout_alignParentLeft="true"
            android:layout_gravity="center_vertical"
            avatarview:avatar_shape="avatarShape"/>

        <LinearLayout
            android:id="@+id/viewProfile"
            android:orientation="vertical"
            android:layout_marginTop="13dp"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@id/userImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/profile_fullname"
                android:text="Zachary Rote"
                android:layout_marginTop="1dp"
                android:textStyle="bold"
                android:textColor="@color/colorPrimaryText"
                android:fontFamily="block"
                android:textSize="20sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/profile_email"
                android:text="zachary.rote@gmail.com"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

    </RelativeLayout>

</LinearLayout>