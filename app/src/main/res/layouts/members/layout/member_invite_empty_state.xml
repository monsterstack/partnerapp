<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/member_invite_empty_state"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_marginTop="60dp"
        android:id="@+id/frown_image"
        android:src="@drawable/ic_sentiment_dissatisfied_black_24dp"
        android:layout_centerHorizontal="true"
        android:layout_width="80dp"
        android:layout_height="80dp" />

    <TextView
        android:id="@+id/emptyState_member_invite_title"
        android:layout_marginTop="30dp"
        android:text="Empty in members"
        android:textAlignment="center"
        android:textSize="23sp"
        android:textStyle="bold"
        android:layout_below="@id/frown_image"
        android:layout_gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/emptyState_get_started_subtext"
        android:layout_marginTop="10dp"
        android:textSize="18sp"
        android:textAlignment="center"
        android:text="Select a member and it will show here."
        android:layout_below="@id/emptyState_member_invite_title"
        android:layout_gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


</RelativeLayout>