<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <monsterstack.io.avatarview.AvatarView
        android:id="@+id/contactAvatar"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="5dp"
        android:layout_width="60dp"
        android:layout_height="60dp" />

    <TextView
        android:id="@+id/contactName"
        android:layout_marginTop="10dp"
        android:text="Sally Johnson"
        android:layout_marginLeft="40dp"
        android:layout_toEndOf="@id/contactAvatar"
        android:textAlignment="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/contactEmail"
        android:layout_below="@id/contactPhoneNumber"
        android:layout_toEndOf="@id/contactAvatar"
        android:layout_marginLeft="40dp"
        android:text="sally.johnson@gmail.com"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/contactPhoneNumber"
        android:layout_below="@id/contactName"
        android:layout_toEndOf="@id/contactAvatar"
        android:layout_centerInParent="true"
        android:layout_marginLeft="40dp"
        android:text="+1 954-678-9999"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <android.support.v7.widget.AppCompatCheckBox
        android:id="@+id/contactSelectCheckBox"
        android:layout_marginTop="12dp"
        android:layout_marginRight="10dp"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>