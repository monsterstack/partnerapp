<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/miniMemberDetails">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/member_slot_label"
            android:textColor="@color/colorPrimaryText"
            android:drawableLeft="@drawable/ic_chevron_left_black_24dp"
            android:text="On Deck"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:visibility="invisible"
            android:layout_height="wrap_content" />

        <monsterstack.io.avatarview.AvatarView
            android:id="@+id/memberAvatarView"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            app:name_size="10dp"
            app:avatar_shape="Circle"/>

        <TextView
            android:id="@+id/memberFullName"
            android:layout_marginTop="20dp"
            android:text="Foo Bar"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:textAlignment="center"
            android:text="Next Draw"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/member_slot_value"
            android:text="12/21/2018"
            android:textColor="@color/colorSecondaryText"
            android:textAlignment="center"
            android:textSize="12sp"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>
</RelativeLayout>