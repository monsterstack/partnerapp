<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/miniMemberDetails"
    android:layout_gravity="bottom|center_vertical|center_horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="40dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/memberFullName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Foo Bar"
        android:textAlignment="center"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/member_slot_value"
        android:text="Draw Slot - 4"
        android:textAlignment="center"
        android:textSize="16sp"
        android:textStyle="bold|italic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/memberNextDrawLabel"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold|italic"
        android:text="Next Draw"
        android:textAlignment="center" />

    <TextView
        android:id="@+id/member_next_draw_value"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="12/21/2018"
        android:textAlignment="center"
        android:textColor="@color/colorSecondaryText"
        android:textSize="12sp" />


</LinearLayout>