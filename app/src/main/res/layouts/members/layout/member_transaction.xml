<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    xmlns:avatarview="http://schemas.android.com/apk/monsterstack.io.avatarview"
    android:layout_height="?android:attr/listPreferredItemHeight"
    android:padding="6dip" >
    <TextView
        android:id="@+id/memberTransactionTimestamp"
        android:text="April 12, 2018"
        android:padding="5dp"
        android:textStyle="bold|italic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/memberTransactionType"
        android:layout_below="@id/memberTransactionTimestamp"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/colorPrimary"
        android:paddingStart="10dp"
        android:paddingBottom="1dp"
        android:text="RECEIVED"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/memberTransactionAmount"
        android:layout_toEndOf="@id/memberTransactionTimestamp"
        android:text="$45.67"
        android:textSize="20sp"
        android:layout_centerInParent="true"
        android:layout_alignParentEnd="true"
        android:textAlignment="viewEnd"
        android:paddingEnd="20dp"
        android:paddingStart="20dp"
        android:layout_width="0dp"
        android:layout_height="wrap_content" />
</RelativeLayout>